<form>
	<field>
		<id>database.enabled</id>
		<label>Enabled</label>
		<type>checkbox</type>
		<help>Enable this database</help>
	</field>
	<field>
		<id>database.name</id>
		<label>Name</label>
		<type>text</type>
		<help>Name of the database</help>
	</field>
	<field>
		<id>database.description</id>
		<label>Description</label>
		<type>text</type>
		<help>Description of this database (Not Parsed)</help>
	</field>
    <field>
        <id>database.dbType</id>
        <label>Type</label>
        <type>dropdown</type>
        <help>Set the backend database type (Default: sqlite)</help>
    </field>
	<field>
		<id>database.bindAddress</id>
		<label>Network Address</label>
		<type>dropdown</type>
		<help><![CDATA[Select interface(s) to use. When enabling SBC, only use physical interfaces here (no vlans etc).]]></help>
	</field>
	<field>
		<id>database.bindPort</id>
		<label>Network Port</label>
		<type>text</type>
		<help>Provide a TCP/UDP port number</help>
        <advanced>true</advanced>
	</field>
</form>